% rebase('base.tpl', title=title, active_page='resources')
<div class="content">
    <h1>Resources for Speech-Language Pathologists</h1>
    
    <div class="resource-section">
        <h2>Clinical Resources</h2>
        <div class="resource-grid">
            <div class="resource-card">
                <h3>Assessment Tools</h3>
                <p>Evaluation templates and protocols for various age groups and disorders.</p>
                <a href="#" class="resource-link">View Tools →</a>
            </div>
            
            <div class="resource-card">
                <h3>Therapy Materials</h3>
                <p>Printable worksheets, activity ideas, and therapy games.</p>
                <a href="#" class="resource-link">Browse Materials →</a>
            </div>
            
            <div class="resource-card">
                <h3>Data Collection</h3>
                <p>Templates and tools for tracking client progress.</p>
                <a href="#" class="resource-link">Get Templates →</a>
            </div>
        </div>
    </div>

    <div class="resource-section">
        <h2>Professional Development</h2>
        <div class="pd-grid">
            <div class="pd-card">
                <h3>CEU Opportunities</h3>
                <p>Information about upcoming continuing education events and courses.</p>
                <ul>
                    <li>Local workshops</li>
                    <li>Online courses</li>
                    <li>Conference listings</li>
                </ul>
            </div>
            
            <div class="pd-card">
                <h3>Research Updates</h3>
                <p>Summaries of recent research in speech-language pathology.</p>
                <ul>
                    <li>Evidence-based practice updates</li>
                    <li>Clinical implications</li>
                    <li>Literature reviews</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="resource-section">
        <h2>Professional Resources</h2>
        <div class="prof-resources">
            <div class="resource-item">
                <h3>Documentation Templates</h3>
                <ul>
                    <li>Evaluation reports</li>
                    <li>Progress notes</li>
                    <li>Treatment plans</li>
                    <li>Discharge summaries</li>
                </ul>
            </div>
            
            <div class="resource-item">
                <h3>Clinical Guidelines</h3>
                <ul>
                    <li>Evidence-based protocols</li>
                    <li>Best practice guidelines</li>
                    <li>Treatment frameworks</li>
                </ul>
            </div>
        </div>
    </div>
</div>
