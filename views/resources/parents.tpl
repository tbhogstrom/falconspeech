% rebase('base.tpl', title=title, active_page='resources')
<div class="content">
    <h1>Resources for Parents</h1>
    
    <div class="resource-section">
        <h2>Speech & Language Development</h2>
        <div class="resource-grid">
            <div class="resource-card">
                <h3>Development Milestones</h3>
                <p>Age-appropriate speech and language milestones from birth to school age.</p>
                <a href="#" class="resource-link">View Milestones →</a>
            </div>
            
            <div class="resource-card">
                <h3>Home Activities</h3>
                <p>Fun activities to support speech and language development at home.</p>
                <a href="#" class="resource-link">Get Activities →</a>
            </div>
            
            <div class="resource-card">
                <h3>Reading Together</h3>
                <p>Tips for using books to promote language development.</p>
                <a href="#" class="resource-link">Reading Guide →</a>
            </div>
        </div>
    </div>

    <div class="resource-section">
        <h2>Parent Guides</h2>
        <div class="guide-list">
            <div class="guide-item">
                <h3>Understanding Speech Therapy</h3>
                <p>What to expect from speech therapy sessions and how to support your child's progress.</p>
            </div>
            
            <div class="guide-item">
                <h3>Insurance & Payment Guide</h3>
                <p>Information about insurance coverage, payment options, and documentation.</p>
            </div>
        </div>
    </div>

    <div class="resource-section">
        <h2>Helpful Downloads</h2>
        <div class="downloads-grid">
            <a href="#" class="download-card">
                <span class="icon">📝</span>
                <h3>Progress Tracker</h3>
                <p>Track your child's speech development</p>
            </a>
            
            <a href="#" class="download-card">
                <span class="icon">📋</span>
                <h3>Goal Sheet Template</h3>
                <p>Set and track therapy goals</p>
            </a>
            
            <a href="#" class="download-card">
                <span class="icon">📚</span>
                <h3>Book List</h3>
                <p>Recommended books by age group</p>
            </a>
        </div>
    </div>
</div>
